{{>header}}
<div class="container">
    <h1><span> PINTORES (Emely)</span></h1>
    {{#if pintores}} 
    <hr>
        <table class="table table-dark table-hover" style="text-align: center;">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Nacionalidad</td>
                    <td>Corriente</td>
                    <td>Imagen</td>
                </tr>
            </thead>
            <tbody>
                {{#each pintores}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{nacionalidad}}</td>
                    <td>{{corriente}}</td>
                    <td><img src="../images/{{pintura}}"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>no se encuentran pintores</div>
    {{/if}}
</div> 
<hr>
{{>footer}}